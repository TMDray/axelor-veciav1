<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

  <!-- ========================================= -->
  <!-- CRM Custom Menus - Vecia AI Agency -->
  <!-- ========================================= -->

  <!-- Menu: All Partners (Companies only) -->
  <menuitem name="crm-all-partners" parent="crm-root" title="All Partners"
    action="action-vecia-crm-view-all-partners" order="5" if="__config__.app.isApp('crm')"/>

  <!-- Action View: All Partners -->
  <action-view name="action-vecia-crm-view-all-partners" title="All Partners"
    model="com.axelor.apps.base.db.Partner">
    <view type="grid" name="partner-grid"/>
    <view type="form" name="partner-form"/>
    <domain>self.isContact = false</domain>
    <context name="_showRecord" expr="eval: id"/>
  </action-view>

  <!-- Menu: All Contacts (Persons only, not employees) -->
  <menuitem name="crm-all-contacts" parent="crm-root" title="All Contacts"
    action="action-vecia-crm-view-all-contacts" order="6" if="__config__.app.isApp('crm')"/>

  <!-- Action View: All Contacts -->
  <action-view name="action-vecia-crm-view-all-contacts" title="All Contacts"
    model="com.axelor.apps.base.db.Partner">
    <view type="grid" name="contact-grid"/>
    <view type="form" name="contact-form"/>
    <domain>self.isContact = true AND self.isEmployee = false</domain>
    <context name="_showRecord" expr="eval: id"/>
  </action-view>

</object-views>
